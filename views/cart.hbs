<h1>Cart</h1>

<div id="cart">
{{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" 
                        data-id="{{id}}" 
                        data-csrf="{{@root.csrf}}"
                    >Delete</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <p><font size="5"><strong>Total cost: </strong><span class="price">{{price}}</span></font></p>

    <form action="/orders" method="POST">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button type="submit" class="btn">Make an order</button>
    </form>
{{else}}
    <p>Cart is empty</p>
{{/if}}
</div>